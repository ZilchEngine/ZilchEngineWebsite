{
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
	  "template"
    ],
    "globalMetadata": {
      "_appName": "ZilchEngine",
      "_appTitle": "ZilchEngine",
	  "_appLogoPath": "images/ZilchLogo.svg",
	  "_appFooter": "ZilchEngine 2024",
      "_enableSearch": true,
      "pdf": true
    }
  }
}